<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.CartMapper">

    <sql id="Base_Column_List">
        id,user_id,seller_id,product_id,num
    </sql>

    <select id="selectAll" resultType="com.example.entity.Cart">
        select cart.*, seller.name as sellerName, product.img as productImg, product.name as productName, product.price as productPrice
        from cart
        left join seller on cart.seller_id = seller.id
        left join product on cart.product_id = product.id
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="userId != null"> and user_id = #{userId}</if>
            <if test="sellerId != null"> and seller_id = #{sellerId}</if>
            <if test="productId != null"> and product_id = #{productId}</if>
            <if test="num != null"> and num = #{num}</if>
        </where>
    </select>

    <select id="selectById" resultType="com.example.entity.Cart">
        select
        <include refid="Base_Column_List" />
        from cart
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from cart
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Cart" useGeneratedKeys="true">
        insert into cart
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="sellerId != null">seller_id,</if>
            <if test="productId != null">product_id,</if>
            <if test="num != null">num,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="sellerId != null">#{sellerId},</if>
            <if test="productId != null">#{productId},</if>
            <if test="num != null">#{num},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Cart">
        update cart
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="sellerId != null">
                seller_id = #{sellerId},
            </if>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="num != null">
                num = #{num},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>